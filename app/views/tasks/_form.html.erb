<%= form_with model: task, local: true do |f| %>
  <%= f.label :name, "タスク名" %>
  <%= f.text_field :name %>

  <%= f.label :content, "内容" %>
  <%= f.text_field :content %>

  <%= f.label :status, "ステータス" %>
  <%= f.select(:status, Task.statuses.keys.map {|k| [Task.statuses_i18n[k], k]}) %>

  <%= f.label :deadline, "〆切" %>
  <%= f.date_field :deadline %>

  <%= f.submit "追加・更新" %>
<% end %>
<%= link_to "タスク一覧へ", tasks_path %>